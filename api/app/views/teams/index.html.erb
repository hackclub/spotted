<div class="row">
  <div class="col">
    <h2>Teams</h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <th class="align-middle" scope="row"><%= team.id %></th>
            <td class="align-middle">
              <%= team.emoji %> 
              <%= team.name %>
            </td>
            <td class="align-middle" style="width: 70px"><%= link_to 'Show', team, class: 'btn btn-sm btn-outline-primary' %></td>
            <td class="align-middle" style="width: 70px"><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-sm btn-outline-secondary' %></td>
            <td class="align-middle" style="width: 70px"><%= link_to 'Destroy', team, class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Team', new_team_path %>
  </div>
</div>

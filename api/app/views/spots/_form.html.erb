<%= form_with(model: spot, local: true) do |form| %>
  <% if spot.errors.any? %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <h5>
        <%= pluralize(spot.errors.count, "error") %> prohibited this spot from being saved:
      </h5>

      <ul style="margin: 0">
        <% spot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :spotter_id %>
    <%= form.text_field :spotter_id, class: 'form-control', id: :spot_spotter_id %>
  </div>

  <div class="form-group">
    <%= form.label :spotted_id %>
    <%= form.text_field :spotted_id, class: 'form-control', id: :spot_spotted_id %>
  </div>
  
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control', id: :team_logo %>
  </div>

  <p>
    <%= form.submit class: 'btn btn-primary' %>
  </p>
<% end %>
